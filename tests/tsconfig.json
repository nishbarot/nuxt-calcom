{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": ["vitest/globals", "@vue/test-utils"],
    "paths": {
      "#app": ["../tests/mocks/nuxt-app.ts"],
      "#app/*": ["../tests/mocks/nuxt-app.ts"],
      "~": ["../"],
      "~/*": ["../*"],
      "@": ["../"],
      "@/*": ["../*"]
    }
  },
  "include": ["../vitest-env.d.ts", "./vue-shim.d.ts", "./**/*.ts", "../runtime/**/*.vue"]
}
